{
	"name": "Traveller",
	"version": "0.1.0",
	"author": "Michael Heilemann",
	"description": "Mongoose Traveller 2E reference game system implementation.",
	"code": "dist/index.html",
	"grid": {
		"type": "square",
		"size": 1,
		"unitSize": 70,
		"unit": "px"
	},
	"assetsPath": "build/static/media/",
	"logoPath": "build/static/media/logo.png",
	"coverPath": "build/static/media/cover.jpg",
	"collections": [
		{
			"type": "character",
			"singularName": "Character",
			"pluralName": "Characters",
			"description": "A player character.",
			"hasEditMode": "false",
			"windowSize": "large",
			"thumbnailField": ["portrait", "token"],
			"allowCreate": "true",
			"canAssumeAsCharacter": "true"
		},
		{
			"type": "note",
			"singularName": "Note",
			"pluralName": "Notes",
			"description": "For simple note taking.",
			"hasEditMode": "true",
			"windowSize": "medium",
			"allowCreate": "true",
			"canAssumeAsCharacter": "false"
		},
		{
			"type": "scene",
			"singularName": "Scene",
			"pluralName": "Scenes",
			"description": "Provide context, cover art and maps.",
			"hasEditMode": "false",
			"thumbnailField": ["mapId", "coverId"],
			"windowSize": "small",
			"allowCreate": "false",
			"canAssumeAsCharacter": "false"
		},
		{
			"type": "weapon",
			"singularName": "Weapon",
			"pluralName": "Weapons",
			"description": "Various things to hit, shoot and blow up things with.",
			"hasEditMode": "true",
			"windowSize": "small",
			"allowCreate": "false",
			"canAssumeAsCharacter": "false",
			"thumbnailField": ["portrait", "token"],
			"highlights": [
				{
					"id": "TL",
					"name": "TL"
				},
				{
					"id": "damage",
					"name": ""
				},
				{
					"id": "range",
					"name": "Range"
				},
				{
					"id": "KG",
					"name": "Weight"
				},
				{
					"id": "magazine",
					"name": "Magazine"
				},
				{
					"id": "traits",
					"name": "Traits"
				}
			]
		},
		{
			"type": "handout",
			"singularName": "Handout",
			"pluralName": "Handouts",
			"description": "Evidence, newspaper clippings, notes and the like.",
			"hasEditMode": "true",
			"windowSize": "small",
			"allowCreate": "false",
			"thumbnailField": ["image"],
			"canAssumeAsCharacter": "false"
		},
		{
			"type": "effect",
			"singularName": "Effect",
			"pluralName": "Effects",
			"description": "Effects are modifiers that can be applied to characters.",
			"windowSize": "small",
			"allowCreate": "false",
			"canAssumeAsCharacter": "false"
		}
	]
}
